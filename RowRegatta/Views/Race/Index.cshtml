@model IEnumerable<RowRegattaTracker.Models.Race>

@{
    ViewBag.Title = "Races";
}
<div class="container">
::before
<h2>Races</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Start)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EventID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Start)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EventID)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RaceID }) |
            @Html.ActionLink("Details", "Details", new { id=item.RaceID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RaceID })
        </td>
    </tr>
}

</table>
</div>